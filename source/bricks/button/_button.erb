<% link_to to, class: "button " + variant ||= "default" do %>
  <% if locals[:icon_left] %>
    <svg class="icon left icon-<%= icon_left %>"><use xlink:href="#icon-<%= icon_left %>"></use></svg>
  <% end %>
  <%= text %>
  <% if locals[:icon_right] %>
    <svg class="icon right icon-<%= icon_right %>"><use xlink:href="#icon-<%= icon_right %>"></use></svg>
  <% end %>
<% end %>
