<section class="hero">
  <%= image_tag image, :alt => image_alt %>
  <% if title || text || (button_link && button_text)  %>
    <div class="container">
      <% if title %>
        <%= content_tag title_tag ||= :h1, :class => "title" do title end %>
      <% end %>
      <% if text %>
        <p class="text"><%= text %></p>
      <% end %>
      <% if button_link && button_text %>
        <%= partial("bricks/button/button", :locals => { :to => button_link,
                                                         :text => button_text,
                                                         :button_class => "white ghost large" }) %>
      <% end %>
    </div>
  <% end %>
</section>
